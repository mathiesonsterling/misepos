<Window x:Class="MiseWPFPOSClient.Modals.TotalDisplay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Total" Height="400" Width="700"
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterOwner"
        WindowStyle="None" BorderBrush="{StaticResource BorderBrush}" BorderThickness="2"
        ShowInTaskbar="false"
        Background="{StaticResource BackgroundBrush}"
        Loaded="Window_Loaded_1"
        Topmost="True"
         >
    <Grid Background="{StaticResource BackgroundBrush}">
        <TextBlock Name="txtTotal" Style="{DynamicResource BigText}" HorizontalAlignment="Center" VerticalAlignment="Center">$0.00</TextBlock>
    </Grid>
</Window>
