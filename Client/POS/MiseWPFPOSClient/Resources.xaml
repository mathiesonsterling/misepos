    <LinearGradientBrush x:Key="SelectedButtonBrush">
        <GradientStop Offset="0" Color="Indigo"/>
        <GradientStop Offset="1" Color="White"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="NormalButtonBrush">
        <GradientStop Offset="0" Color="Silver"/>
        <GradientStop Offset="1" Color="BlanchedAlmond"/>
    </LinearGradientBrush>
