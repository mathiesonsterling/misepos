<?xml version="1.0" encoding="utf-8" ?>
<local:BasePage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mise.Inventory.Pages.RestaurantSelectPageUpdated"
             	xmlns:local="clr-namespace:Mise.Inventory.Pages;assembly=Mise.Inventory"
	           Title="Restaurants"
  >
 		<StackLayout VerticalOptions="FillAndExpand" Padding="50">
			<ScrollView>
				<StackLayout x:Name="stckMain">
				</StackLayout>
			</ScrollView>
			<ActivityIndicator 
				IsRunning="{Binding Processing}" 
				Color="{Binding ActivityColor}" 
				IsEnabled="{Binding NotProcessing}"
			/>
		</StackLayout>
</local:BasePage>