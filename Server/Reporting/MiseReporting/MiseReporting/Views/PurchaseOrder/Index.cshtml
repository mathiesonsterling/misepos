@model MiseReporting.Models.RestaurantViewModel

@{
    ViewBag.Title = "Purchase Orders";
}

<h2>Purchase Orders for @Model.Name</h2>
<!--
<p>
    @Html.ActionLink("Create New", "Create")
</p>-->
<table class="table">
    <tr>
        <th>
            Date Created
        </th>
        <th>
            Last Updated
        </th>
        <th>
            Vendor
        </th>
        <th>
            Created By
        </th>
        <th>
            Number of Items
        </th>
        <th>
            Status
        </th>
        <th>
            Receiving Order
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.PurchaseOrders) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DateCreated)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastUpdated)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VendorName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmployeeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumLineItems)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LinkedReceivingOrderId)
        </td>
        <td>
           <!-- @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |-->
            @Html.ActionLink("Details", "Details", new { id=item.Id }) 
           <!-- @Html.ActionLink("Delete", "Delete", new { id=item.Id }) -->
        </td>
    </tr>
}

</table>
