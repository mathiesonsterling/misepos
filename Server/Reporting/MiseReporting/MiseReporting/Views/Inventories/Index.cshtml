@model MiseReporting.Models.RestaurantViewModel

@{
    ViewBag.Title = "Inventories";
}

<h2>Inventories for @Model.Name</h2>

<table class="table">
    <tr>
        <th>
            Date Created
        </th>
        <th>
            Date Inventory Completed
        </th>
        <th>
            Number of items
        </th>
        <th>
            Employee who started
        </th>
        <th>
            Export CSV
        </th>
    </tr>

@foreach (var item in Model.Inventories) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DateCreated)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateCompleted)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumLineItems)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DoneByEmployee)
        </td>
        <td>
            @Html.ActionLink("By section", "GenerateRawCSV", new {id = item.Id})
            &#124;
            @Html.ActionLink("Total inventory", "GenerateAggregatedCSV", new {id = item.Id})
        </td>
    </tr>
}

</table>
