@model IEnumerable<MiseWebsite.Models.RestaurantViewModel>

@{
    ViewBag.Title = "Restaurants";
}

<h2>Restaurants</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.Id }) 
        </td>
        <td>
            <a href="../Inventories/Index?restaurantId=@item.Id">Inventories</a> |
            <a href="../Pars/Index?restaurantId=@item.Id">Pars</a> |
            <a href="../ReceivingOrder/Index?restaurantId=@item.Id">Received Shipments</a> |
            <a href="../PurchaseOrder/Index?restaurantId=@item.Id">Purchase Orders</a>
        </td>
    </tr>
}

</table>
